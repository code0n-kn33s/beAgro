div.container
  h1(class="ml10 production-title title" id="production-title")
    span(class="text-wrapper")
      span(class="letters production-title production-title-content") Этапы производства

  div.production-list
    - var cards = ['Получение силикатного расплава', 'Получение волокна из расплава', 'Подготовка и подача связуещго раствора', 'Порезка продукции', 'Упаковка ваты']
    each card, index in cards
      .production-item
        .production-item-description
          .production-item-id= (index + 1)
          .production-item-text
            span= card
        .production-item-img-wrap
          .production-item-img
            img(src=`./img/prod-${index + 1}.png`, alt="")
